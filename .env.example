# Environment Configuration for Unified MCP Server
# Copy this file to .env and fill in your actual credentials

# === Service Enablement ===
# Set to 'true' to disable specific services
# DISABLE_JIRA=false
# DISABLE_CONFLUENCE=false
# DISABLE_OUTLOOK=false

# === Test Mode ===
# Set to 'true' to run in test mode with mock data
USE_TEST_MODE=false

# === JIRA Configuration ===
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your.username@company.com
# JIRA password - can be plain text or base64 encoded
JIRA_PASSWORD=your-jira-password-or-token

# === Confluence Configuration ===
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_USERNAME=your.username@company.com
# Confluence password - can be plain text or base64 encoded  
CONFLUENCE_PASSWORD=your-confluence-password-or-token

# Alternative: Use shared credentials for both JIRA and Confluence
# USER_NAME=your.username@company.com
# SYSTEM_PASSWORD=base64-encoded-password

# === Microsoft Outlook Configuration ===
# Azure AD App Registration details
AZURE_CLIENT_ID=your-azure-app-client-id
AZURE_CLIENT_SECRET=your-azure-app-client-secret
AZURE_TENANT_ID=your-tenant-id-or-common
AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth server settings
AUTH_SERVER_URL=http://localhost:3000

# === HTTP Configuration ===
HTTP_TIMEOUT=30000
HTTP_RETRIES=3
# Set to '0' to disable SSL certificate verification (for corporate environments)
NODE_TLS_REJECT_UNAUTHORIZED=1