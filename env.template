# === JIRA Configuration ===
JIRA_URL=https://your-domain.atlassian.net/jira
JIRA_USERNAME=your-jira-username
# JIRA password - can be plain text or base64 encoded
JIRA_PASSWORD=your-jira-password-or-base64

# === Confluence Configuration ===
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki/
CONFLUENCE_USERNAME=your-confluence-username
# Confluence password - can be plain text or base64 encoded
CONFLUENCE_PASSWORD=your-confluence-password-or-base64

# Outlook MCP Server Configuration for Personal Account
# Replace these values with your Azure App Registration credentials

AZURE_CLIENT_ID=your-azure-app-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# OAuth server expects these variable names
MS_CLIENT_ID=your-azure-app-client-id
MS_CLIENT_SECRET=your-azure-client-secret

# Set to false to use real Outlook API (not mock data)
USE_TEST_MODE=false

# Default timezone for calendar events
DEFAULT_TIMEZONE=America/New_York

# Personal email account setup
# You'll authenticate with your personal Microsoft account during OAuth flow

AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth server settings
AUTH_SERVER_URL=http://localhost:3000
AUTH_SERVER_PORT=3000

# === HTTP Configuration ===
HTTP_TIMEOUT=30000
HTTP_RETRIES=3
# Set to '0' to disable SSL certificate verification (for corporate environments)
NODE_TLS_REJECT_UNAUTHORIZED=1